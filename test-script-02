#!/usr/bin/env bash
# NAME=test-script-02
# VERSION=0.0.1
# DESCRIPTION=Short one-line description
# HOMEPAGE=https://github.com/NoelNac-HackEthical/mes-scripts

set -euo pipefail
IFS=$'\n\t'

# --- colours / helpers (safe if not TTY) ---
if [ -t 1 ]; then
  BOLD='\033[1m'; DIM='\033[2m'; GREEN='\033[32m'; RED='\033[31m'; YELLOW='\033[33m'; RESET='\033[0m'
else
  BOLD=''; DIM=''; GREEN=''; RED=''; YELLOW=''; RESET=''
fi

die(){ echo -e "${RED}✖ $*${RESET}" >&2; exit 1; }
log(){ echo -e "${DIM}•${RESET} $*"; }
ok(){  echo -e "${GREEN}✔${RESET} $*"; }

show_version(){ echo "${NAME:-test-script-02} ${VERSION:-0.0.1}"; }
show_help(){
  cat <<'EOF'
test-script-02 — Script test deux

Usage:
  test-script-02 [OPTIONS]

Options:
  -o, --out FILE        Output file (default: ./output.txt)
  -t, --target DOMAIN   Target domain / host
  --no-medium           Disable medium lists (example flag)
  -V, --version         Show version and exit
  -h, --help            Show this help and exit
EOF
}

# defaults (override in generated file by replacing test-script-02 etc.)
NAME="test-script-02"
VERSION="0.1.0"
DESCRIPTION="Script test deux"
HOMEPAGE="https://github.com/NoelNac-HackEthical/mes-scripts"

OUT="./output.txt"
TARGET=""
NO_MEDIUM=0

# parse args
while (( "$#" )); do
  case "$1" in
    -o|--out) OUT="${2:-}"; shift 2;;
    -t|--target) TARGET="${2:-}"; shift 2;;
    --no-medium) NO_MEDIUM=1; shift ;;
    -V|--version) show_version; exit 0;;
    -h|--help) show_help; exit 0;;
    --) shift; break;;
    -*) die "Unknown option: $1";;
    *)  POSITIONAL+=("$1"); shift ;;
  esac
done

# tempdir & cleanup
tmpdir="$(mktemp -d)"
cleanup(){ rm -rf "$tmpdir"; }
trap cleanup EXIT INT TERM

# helper: check commands
require_cmd(){ command -v "$1" >/dev/null 2>&1 || die "Please install '$1' (e.g. apt: sudo apt install $1)"; }
# require_cmd curl

# --- main ---
log "Writing to $OUT"
printf "%s v%s\n" "$NAME" "$VERSION" > "$OUT"
ok "Done. Output: $OUT"
